@model IList<WebApplication.Models.Medium.MediumQuestionViewModel>

<p>Тест "Средний"</p>
<div class="unique">
    <form enctype="multipart/form-data" asp-controller="Result" asp-action="Medium" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="question">
                <h3 name="[@i].Question">@Model[i].Question </h3>
                <div class="question-image">
                    <img width="400" src="@Model[i].Thumbnail" alt="Картинка" class="scale" />
                </div>
                <br />
                <div class="test-answer">
                    <input name="[@i].UserInput" type="text" placeholder="Введите ответ" />
                </div>
            </div>
            for (int j = 0; j < Model[i].PossibleAnswers.Count; j++)
            {
                <input type="hidden" name="[@i].PossibleAnswers[@j]" value="@Model[i].PossibleAnswers[j]" />
            }

            <hr />
        }
        <button>Отправить</button>
    </form>
</div>